{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */

    "noUnusedLocals": false, // 사용하지 않는 지역 변수 허용
    "noUnusedParameters": false, // 사용하지 않는 매개변수 허용
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // 암시적 any 허용
    "noImplicitReturns": false, // 암시적 반환 허용
    "noImplicitThis": false, // 암시적 this 허용
    "noImplicitOverride": false, // 암시적 override 허용
    "exactOptionalPropertyTypes": false, // 정확한 선택적 속성 타입 비활성화
    "noPropertyAccessFromIndexSignature": false, // 인덱스 시그니처에서 속성 접근 허용
    "noUncheckedIndexedAccess": false, // 인덱스 접근 검사 비활성화

    /* 추가 완화 옵션 */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "types": ["vitest/globals"]
  },
  "include": ["src", "md/constants"],
  "exclude": ["src/__tests__/**/*.spec.ts", "src/__tests__/**/*.spec.tsx"]
}
